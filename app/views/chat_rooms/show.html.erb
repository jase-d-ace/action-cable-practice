<h1><%= @chat_room.title %></h1>


<div id="messages" data-chat-room-id="<%= @chat_room.id %>">
  <%= render @chat_room.messages %>
</div>
<div class="form-group">
  <textarea id="message-content" cols="80" rows="1"></textarea>
  <small class="text-muted">At least 1 character, please!</small>
</div>

<% if current_user.id == @chat_room.user_id %>
  <p class="lead"><%= link_to 'Delete this Room?', @chat_room, method: :delete, data: {confirm: "Are you sure? All messages will be deleted"}, class: 'btn btn-primary' %></p>
<% end %>
